<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!-- tree view-->
    <record id="show_tree_view" model="ir.ui.view">
        <field name="name">show.tree.view</field>
        <field name="model">movie.show</field>
        <field name="arch" type="xml">
            <tree string="Movie show type">
                <field name="show" widget="float_time"/>
                 <field name="seating_template"/>
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <button name="%(movie_seating_arrangement_action)d" type="action" class="oe_stat_button"  icon="fa-list" string="open seat arrangemet">
                                <!-- <field string="Offers" name="offer_count" widget="statinfo"/> -->
                                 </button>
            
                <!-- <field name="movie_language_id"/> -->
            </tree>
        </field>

    </record>

<!-- from view-->
    <record id="show_form_view" model="ir.ui.view">
        <field name="name">show.form.view</field>
        <field name="model">movie.show</field>
        <field name="arch" type="xml">
             <form string="movie show type"> 
                <sheet>
                    <group>
                            <field name="show"/>
                            <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
