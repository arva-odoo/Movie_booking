<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!-- tree view-->
    <record id="tempalte_tree_view" model="ir.ui.view">
        <field name="name">movie.template.tree.view</field>
        <field name="model">movie.show.template</field>
        <field name="arch" type="xml">
            <tree string="Movie template">
                <field name="name"/>
                <field name="ticket_type"/>
                <field name="price"/>
                <field name="total_row"/>
                <!-- <field name="status" widget="badge"/> -->
            </tree>
        </field> 

    </record>

<!-- tempalte form view-->

    <record id="template_form_view" model="ir.ui.view">
        <field name="name">movie.template.form.view</field>
        <field name="model">movie.show.template</field>
        <field name="arch" type="xml">
            <form string="movie template">
                    
                    <sheet>
                    <h2>Seat arrangement</h2>
                            <group>
                                <group> 
                                    <field name="name"/>
                                    <field name="ticket_type"/>
                                    <field name="price"/>
                                    <field name="total_row"/>
                                </group>
                            
                            </group>    
                    </sheet>
            </form> 
        </field>
    </record>
</odoo>