<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!-- tree view-->
    <record id="show_type_tree_view" model="ir.ui.view">
        <field name="name">show.type.tree.view</field>
        <field name="model">show.type</field>
        <field name="arch" type="xml">
            <tree string="Movie show type">
                <field name="name"/>
            </tree>
        </field>

    </record>

<!-- from view-->
    <record id="show_type_form_view" model="ir.ui.view">
        <field name="name">show.type.form.view</field>
        <field name="model">show.type</field>
        <field name="arch" type="xml">
             <form string="movie show type"> 
                <sheet>
                    <group>
                            <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
